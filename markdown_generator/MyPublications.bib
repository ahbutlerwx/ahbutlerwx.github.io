	keywords = {Arctic Oscillation, downward wave coupling, extremes, NAO/NAM, ozone, planetary waves, polar vortex, stratosphere-troposphere coupling, stratospheric ozone, stratospheric polar vortex, vortex intensification},
	pages = {e2020JD033271},
