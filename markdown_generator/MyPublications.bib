@article{karpechko_northern_2022,
	title = {Northern {Hemisphere} {Stratosphere}-{Troposphere} {Circulation} {Change} in {CMIP6} {Models}. {Part} 1: {Inter}-{Model} {Spread} and {Scenario} {Sensitivity}},
