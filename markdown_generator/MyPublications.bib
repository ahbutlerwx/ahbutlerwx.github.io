	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Karpechko, Alexey Yu. and Afargan-Gerstman, Hilla and Butler, Amy H and Domeisen, Daniela I V and Kretschmer, Marlene and Lawrence, Zachary and Manzini, Elisa and Sigmond, Michael and Simpson, Isla R and Wu, Zheng},
	month = sep,
